         </GridPane.margin></TextField>
        <TextField fx:id="authors" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <GridPane.margin>
             <Insets bottom="4.0" left="8.0" right="8.0" top="4.0" />
         </GridPane.margin></TextField>
        <TextField fx:id="illustrators" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <GridPane.margin>
             <Insets bottom="4.0" left="8.0" right="8.0" top="4.0" />
         </GridPane.margin></TextField>
        <TextArea fx:id="description" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="6">
            <GridPane.margin>
             <Insets bottom="4.0" left="8.0" right="8.0" top="4.0" />
         </GridPane.margin></TextArea>
        <TextField fx:id="publisher" GridPane.columnIndex="1" GridPane.rowIndex="3">
