<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import org.controlsfx.glyphfont.Glyph?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onKeyPressed="#onKeyPressed" prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.koziolekweb.ragecomicsmaker.gui.RootController">
  <children>
      <ToolBar prefHeight="40.0" VBox.vgrow="NEVER">
        <items>
            <Button fx:id="browseBtn" mnemonicParsing="false" onAction="#showDirectoryDialog" styleClass="success" text="Open Directory" />
            <Button fx:id="saveBtn" disable="true" mnemonicParsing="false" onAction="#save" text="Save" />
            <Region fx:id="spring" maxWidth="999.0" minWidth="-Infinity" prefWidth="320.0" />
            <Button fx:id="generateBtn" alignment="CENTER" disable="true" mnemonicParsing="false" onAction="#generateBook" styleClass="primary" text="Generate book">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets></Button>
        </items>
      </ToolBar>
      <SplitPane dividerPositions="0.0" VBox.vgrow="ALWAYS">
         <items>
             <fx:include fx:id="leftPane" source="left-pane.fxml" />
            <TabPane fx:id="tabPane">
               <tabs>
                  <Tab closable="false" text="Frame Editor">
                     <content>
                         <fx:include fx:id="editorTab" source="frame-editor.fxml" />
                     </content>
                  </Tab>
                  <Tab closable="false" text="Metadata">
                      <content>
                        <fx:include fx:id="metadataTab" source="metadata-tab.fxml" />
                      </content>
                  </Tab>
               </tabs>
            </TabPane>
         </items>
      </SplitPane>
  </children>
</VBox>
