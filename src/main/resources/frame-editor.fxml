   <AnchorPane fx:id="stack">
      <children>
        <ImageView fx:id="imageDisplay" pickOnBounds="true" preserveRatio="true" />
        <Pane fx:id="framesContainer" mouseTransparent="true" />
        <Canvas fx:id="frameCanvas" height="600.0" width="600.0" />
      </children>
   </AnchorPane>
</ScrollPane>
