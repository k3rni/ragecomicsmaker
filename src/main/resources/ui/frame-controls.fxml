<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<fx:root type="javafx.scene.layout.BorderPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <left>
      <ImageView fx:id="image" fitHeight="96.0" fitWidth="96.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" />
   </left>
   <center>
      <Label id="label" fx:id="label" prefWidth="1.0" text="9" BorderPane.alignment="CENTER" HBox.hgrow="NEVER">
         <HBox.margin>
            <Insets left="8.0" />
         </HBox.margin>
         <font>
            <Font size="32.0" />
         </font></Label>
   </center>
   <right>
         <!-- No text on this button - but icon is set after loading -->
         <Button id="delete" mnemonicParsing="false" onAction="#deleteFrame" prefHeight="90.0" text="">
            <font>
               <Font size="16.0" />
            </font>
         </Button>
   </right>
   <opaqueInsets>
      <Insets bottom="8.0" />
   </opaqueInsets>
   <cursor>
      <Cursor fx:constant="OPEN_HAND" />
   </cursor>
   <padding>
      <Insets left="8.0" right="16.0" />
   </padding>
</fx:root>
